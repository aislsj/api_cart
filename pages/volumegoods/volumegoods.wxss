
page{background: white}

.con_info{height: 100%;background: white;}
.exchange_info{width: 85%;margin: 0 auto  20% auto;border-radius:5px }
.integralInfo{margin: 5% auto 0 auto;background: white;}



.integralInfo .integralInfo_img{text-align: center;width: 100%}
.integralInfo .integralInfo_img image{width: 100%; }
.integralInfo_txt{margin-left:8%;float: left;line-height: 22px;margin-top: 1%}
.integralInfo_num{float: right}
.integralInfo_txt view:first-child{font-family: 500;font-size: 18px;color: black}

.integralInfo_txt view{font-size: 12px;color: #999999}

.integralInfo_txt span{background:#FF3B30;font-size: 9px;color: white;
border-radius: 12px;padding: 2px 4px;float: right}
.integralInfo_num{padding:7px 20px;background:#F5F5F5;color: #3979FD;
border-radius: 15px}
.volume_info{margin-top:30rpx}
.volume_explain{font-size: 25rpx;color:#A8A6A6}
.volume_con{font-size: 25rpx;line-height: 25rpx;margin-bottom: 8%}

.start_time,.end_time{font-size: 12px;line-height: 20px;margin-bottom: 5%}


.start_title,.end_title{color:#A8A8A9}
.finger_img{width:120rpx}




/* 弹窗层-图片*/
.modal-mask {width: 100%; height: 100%; position: fixed; top: 0;left: 0;background: #000;opacity: 0.5;}
.btn{width:80px;height:35px;background:#44b549;line-height:35px; text-align:center;color:#fff;font-size:15px;margin:20px auto;border-radius:100px;}
/* 遮罩层 */
.mask{ width:100%;height:100%;position:fixed;top:0;left:0;background:#000;z-index:9000;opacity:0.5;}
/* 弹出层 */
.modalDlg{width:70%;position:fixed;top:100px;left:0;right:0;z-index:9999;margin:0 auto;
background-color:#fff;border-radius:5px;display: flex;flex-direction: column;align-items:center;}
/* 弹出层里面的图片 */
.modalDlg image{width:220px;height:120px;margin-top:30px;}
/* 弹出层里面的按钮 */
.ok{width:80px;height:35px;background:#44b549;line-height:35px;color:#fff;font-size:15px;margin:20px 15px;border-radius:100px;float: left;text-align: center;}
/* 弹出层里面的文字 */
.text{text-align:center;font-size:14px;color:#666;width:180px;margin-top:10px;}



.detail-bottom-box{position: fixed;bottom: 0;width: 100%;background: rgb(244,244,244);height: 75rpx}
.detail-bottom-box view image{width: 30rpx;height: 30rpx}

.detail-bottom-box .bottom-text{width:35%;}
.addcart span{color: red}
.buy{color:#fff;background: red}  
.detail-bottom-box view{  display: block;  float: right;    text-align: center;  font-size: 12pt;height: 75rpx;line-height: 75rpx  }


