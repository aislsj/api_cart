/* pages/cartinfo/cartinfo.wxss */
page{background: white}
.addcartinfo{width: 94%;height: 100%;padding-left: 3%;padding-right: 3%}
.line span{float: left;margin-right: 3%;font-size: 28rpx;width: 20%}

.line_span span{margin-right: 3%;font-size: 28rpx;}

.line input{float: left;color: rgb(110,110,110);font-size: 22rpx;width: 70%;}
.line{padding: 20rpx 0;border-bottom: 1rpx solid #F2F2F2}
.picker{color:rgb(110,110,110);font-size:22rpx; }
.driving_text span{color: #099EFC}
.driving_text{color: rgb(77,77,77) }


.line_span{width: 40%;padding: 20rpx 0;font-size: 28rpx}
.driving_license{width: 100%;margin: 0 auto}
.driving_license image{width: 100%;height: 180rpx}

.image_left{margin-right: 2.5%;width: 47.5%;float: left}
.image_right{margin-left: 2.5%;width: 47.5%;float: left}

.driving_image{width: 80%;padding: 8% 10%;background: rgb(250,250,250)}
.driving_text{text-align: center;background: #F2F2F2;font-size:21rpx;padding: 3%}

.driving_image,.license{border-top-left-radius:15rpx;border-top-right-radius:15rpx;}
.driving_text{border-bottom-left-radius:15rpx;border-bottom-right-radius:15rpx;}
.license{width: 50%;padding: 8% 25%;background: rgb(250,250,250)}
.license image{height: 230rpx}
.save{text-align: center;height: 3em;margin-top: 8% }

.save input{background: #999;height: 2em;line-height: 2em;color: white;margin: 0 auto;border-radius: 5px;text-align: center}
.upload-img-btn{background: #E6E6E6;}