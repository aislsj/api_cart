/* pages/puoduct/product.wxss */

page {
    width: 100%;
    height: 100%;
    background-color: #EEEDED;
}
.basic-info-box{position: fixed;width: 100%;z-index: 99999;}

.container{background: #fafafa}
.swiper{height: 550rpx;width: 100%;}
.fixed-btns-box{ height: 80rpx;width: 100%}
.fiexd-cart{width: 100%;height:80rpx;}
.fixed-btns-box image{width: 80rpx;height:80rpx;float: right;margin: 5% 5% 5% 0}

.cart-box{ position: relative;  background-color: #FFFFFF;  width: 83%;  margin-left: 3%;  overflow: auto;  opacity: 0.9;  border-radius: 5pt;  padding: 5%;  margin-top: -4pt;  z-index: 10000; }

.product-price{color:#FF4D28;font-size: 19pt;margin-left: 0}
.product-trade_way{color:#AAAAAA;font-size: 11pt;margin-left:10pt}
.product-name{margin-top:5pt}
.info-text{color: #FF4D28;font-size: 11pt;margin: 0;margin-top: 3pt}
.info-con{color: #AAAAAA;font-size: 10pt;margin-left: 15pt;margin-top: 3pt}

.tabs-box .selected{color:#FF3323 }
.tabs-box .selected .vlue{border-bottom:2px solid #FF3323;}
.tabs-item{float: left;width:50%;text-align: center;padding:0;border-bottom: 1px solid rgb(219,219,219);background: rgb(255,255,255);height: 90rpx;line-height:90rpx}

.vlue{height:90rpx;font-size: 16px;width: 54px;margin: 0 auto}

.product-info-image image{width: 100%;}


.detail-bottom-box{position: fixed;bottom: 0;width: 100%}
.detail-bottom-box view{float: left;width: 50%;padding: 20rpx 0;text-align: center;background: white}
.detail-bottom-box .red{background: red;color: white}


.all{background: #EEEDED}

.integralInfo{width: 95%;margin: 0 auto;margin-top: 3%;
position: relative;height: 140rpx;}

.integralInfo .integralInfo_img{float: left;width: 31%;height: 140rpx;color: white;text-align: center;}
.integralInfo .card-right{float:left;width: 69%;background: white}


.integralInfo_txt{margin-left:5%;float: left;height: 140rpx;display:table}
.cell{display:table-cell;vertical-align:middle;}

.integralInfo_num{float: right}
.integralInfo_txt view:first-child{font-family: 400;
  -webkit-line-clamp:1;
  overflow:hidden;color: black;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;width: 100%;
 font-size: 36rpx;margin-top: 2%
}
.integralInfo_txt view:last-child{font-size: 27rpx;color: #999999}
.integralInfo_txt span{background:#FF3B30;font-size: 9px;color: white;
border-radius: 12px;padding: 2px 4px;float: right}
.integralInfo_num{padding:7px 20px;background:#F5F5F5;color: #3979FD;
border-radius: 15px}


.show_more{position: absolute;bottom: 0;font-size: 12px;color: #F33234;right: 5%;width: 100rpx;height: 140rpx;align-items: center;display: flex;justify-content: center;}
.show_more image{height: 100rpx;width: 100%;}
.card_img{height: 140rpx;background: white}
.card_img image{width: 140rpx;height: 100%}
.end_time{font-size: 27rpx;color: #999999;}





/* 弹窗层-图片*/
.modal-mask {width: 100%; height: 100%; position: fixed; top: 0;left: 0;background: #000;opacity: 0.5;}
.btn{width:80px;height:35px;background:#44b549;line-height:35px; text-align:center;color:#fff;font-size:15px;margin:20px auto;border-radius:100px;}
/* 遮罩层 */
.mask{ width:100%;height:100%;position:fixed;top:0;left:0;background:#000;z-index:9000;opacity:0.5;}
/* 弹出层 */
.modalDlg{width:70%;position:fixed;top:240rpx;left:0;right:0;z-index:9999;margin:0 auto;
background-color:#fff;border-radius:5px;display: flex;flex-direction: column;align-items:center;}
/* 弹出层里面的图片 */
.modalDlg image{width:220px;height:120px;margin-top:30px;}
/* 弹出层里面的按钮 */
.ok{width:80px;height:35px;background:#44b549;line-height:35px;color:#fff;font-size:15px;margin:20px 15px;border-radius:100px;float: left;text-align: center;}
/* 弹出层里面的文字 */
.text{text-align:center;font-size:14px;color:#666;width:180px;margin-top:10px;}