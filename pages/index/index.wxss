}

.page-body-info {
    padding-bottom: 0;
    height: 230px;
}

.userinfo-avatar {
    border-radius: 128rpx;
    width: 128rpx;
    height: 128rpx;
}

.userinfo-nickname {
    margin-top: 20rpx;
    font-size: 38rpx;
}


