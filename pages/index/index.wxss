.all {
    display: flex;
    width: 750rpx;
    height: 1330rpx;
    flex-direction: column;
    /* justify-content: center; */
    align-items: center;
}

.titleMax {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.titleMax text {
    margin-top: 60rpx;
    font-size: 40rpx;
    color: #fff;
    font-weight: 300;
}

.titles {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.titles p {
    margin-top: 10rpx;
    font-size: 72rpx;
    color: #fff;
    font-weight: 600;
}

.titleFont {
    display: flex;
    width: 385rpx;
    height: 50rpx;
    margin: 0 auto;
    margin-top: 50rpx;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    /* background: pink; */
    background: linear-gradient(#fde1c2, #ffda98);
    border: 2rpx solid white;
    border-radius: 100rpx;
}

.titleFont p {
    line-height: 20rpx;
    font-size: 29rpx;
    color: #f34538;
}

.luckyBox {
    display: flex;
    width: 600rpx;
    height: 730rpx;
    margin-top: 55rpx;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.luckyBox p {
    margin-top: 30rpx;
    font-size: 35rpx;
    color: #fff;
    font-weight: 500;
}

.luckyBox span {
    color: #fbda23;
    margin-left: 8rpx;
    margin-right: 8rpx;
}

.home {
    display: flex;
    width: 240rpx;
    height: 52rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    flex-direction: column;
    /* justify-content: center; */
    align-items: center;
    text-align: center;
    /* background: pink; */
    background: linear-gradient(#fde1c2, #ffda98);
    border: 2rpx solid white;
    border-radius: 100rpx;
}

.home p {
    line-height: 47rpx;
    font-size: 29rpx;
    color: #f34538;
    font-weight: 300;
}

.giftBox {
    position: absolute;
    width: 242rpx;
    height: 220rpx;
    z-index: 4;
    right: 3%;
    top: 1035rpx;
}


